{
  "extends": [
    "airbnb", //
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:jest/recommended",
    "prettier"
  ],
  "globals": {
    "React": true
  },
  "rules": {
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [
          ".js", //
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    ],
    "import/no-extraneous-dependencies": [
      "error", //
      { "devDependencies": true }
    ]
  }
}
